#include <iostream>
#include <string>
using namespace std;

int main() {
    // Сохраняем строку в переменной
    string str_1 = "AaBbCcDd";
    
    // Выводим на экран строки с четными индексами
    cout << "str_1[::2] -> ";
    for (int i = 0; i < str_1.length(); i += 2) {
        cout << str_1[i];
    }
    cout << "\n\n";
    
    // Выводим на экран строки с нечетными индексами
    cout << "str_1[1::2]-> ";
    for (int i = 1; i < str_1.length(); i += 2) {
        cout << str_1[i];
    }
    cout << endl;
    
    return 0;
}
